                                  ]
                                },
                                "comment": {
                                  "type": ["string", "null"]
                                },
                                "learningObjectiveSet": {
                                  "type": ["array", "null"],
                                  "items": {
                                    "type": "object",
                                    "properties": {
                                      "source": {
                                        "type": "string"
                                      },
