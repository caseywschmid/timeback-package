                    {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string",
                          "const": "not_eligible"
                        }
                      },
                      "required": ["status"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string",
                          "const": "available"
                        }
                      },
                      "required": ["status"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string",
                          "const": "in_progress"
                        },
                        "assignmentId": {
                          "type": "string"
                        },
                        "lessonId": {
                          "type": "string"
                        }
                      },
                      "required": ["status", "assignmentId", "lessonId"]
                    },
                    {
                      "type": "object",
                      "properties": {
                        "status": {
                          "type": "string",
