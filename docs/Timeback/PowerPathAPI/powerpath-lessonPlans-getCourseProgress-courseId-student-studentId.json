                                      }
                                    },
                                    "required": [
                                      "source",
                                      "learningObjectiveResults"
                                    ]
                                  }
                                },
                                "inProgress": {
                                  "type": ["string", "null"]
                                },
                                "incomplete": {
                                  "type": ["string", "null"]
                                },
                                "late": {
                                  "type": ["string", "null"]
                                },
                                "missing": {
                                  "type": ["string", "null"]
                                }
                              },
                              "required": [
                                "status",
                                "scoreDate",
                                "scoreStatus"
                              ],
                              "description": "Represents an assessment result."
                            },
                            "description": "Assessment results for the component and student"
                          }
