        "required": true,
        "schema": { "type": "string" }
      },
      {
        "in": "query",
        "name": "fields",
        "description": "Comma-separated list of fields to include in the response",
        "schema": {
          "type": "string",
          "description": "Comma-separated list of fields to include in the response",
          "example": "sourcedId,name"
